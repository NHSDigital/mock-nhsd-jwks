<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AssignMessage.RedirectToApigeeCallback">
    <Set>
        <StatusCode>302</StatusCode>
        <Headers>
            <Header name="Location">https://internal-dev.api.service.nhs.uk/oauth2-pr-220/callback?code={authorization_code}&amp;state={request.formparam.state}&amp;client_id=some-client-id</Header>
        </Headers>
    </Set>
    <AssignTo createNew="true" transport="http" type="response"/>
</AssignMessage>